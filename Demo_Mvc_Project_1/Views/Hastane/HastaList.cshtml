@model List<Demo_Mvc_Project_1.Models.Tbl_Hastalar>
@{
    ViewBag.Title = "HastaList";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<h2>Hasta Listesi</h2>
<table class="table table-bordered ">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>TC</th>
        <th>Telefon</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Hastaid</td>
                    <td>@item.HastaAd</td>
                    <td>@item.HastaSoyad</td>
                    <td>@item.HastaTC</td>
                    <td>@item.HastaTelefon</td>
                </tr>
            }
</table>
<a href="#" class="btn btn-info">Yeni Hasta Girişi</a>

